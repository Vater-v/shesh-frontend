<?xml version="1.0" encoding="utf-8"?>
<!--themes.xml-->
<resources>

    <style name="Theme.Shesh" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:windowBackground">@color/shesh_deep_void</item>
        <item name="android:colorBackground">@color/shesh_deep_void</item>
        <item name="android:statusBarColor">@color/shesh_deep_void</item>
        <item name="android:windowLightStatusBar">false</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@drawable/transparent_icon</item>
        <item name="windowSplashScreenBackground">#0A0E14</item>
        <item name="postSplashScreenTheme">@style/Theme.Shesh</item>
    </style>

</resources>
